function onBattleAction()
	if isWildBattle() and ( isOpponentShiny() or (not isAlreadyCaught()) or (getOpponentName() == "Riolu" ) or (getOpponentName() == "Nosepass" ) or (getOpponentName() == "Sableye" )or (getOpponentName() == "Axew" )  or (getOpponentName() == "Mawile" ) ) then
		if useItem("Ultra Ball") or useItem("Great Ball") or useItem("Pokeball") then
			return
		end
	end
	if (getUsablePokemonCount() >= 2 and getOpponentName() != "Zubat") then
		return attack() or sendUsablePokemon() or sendAnyPokemon() or run()
	else
		return run() or attack() or sendUsablePokemon() or sendAnyPokemon()
	end
end
